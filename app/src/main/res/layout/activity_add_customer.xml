<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.AddCustomerActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-135dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/doctor1" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:background="@drawable/bgshape"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="220dp"
            android:layout_height="111dp"
            app:srcCompat="@drawable/lo1" />

        <EditText
            android:id="@+id/nameEdt"
            android:layout_width="362dp"
            android:layout_height="50dp"
            android:imeOptions="actionNext"
            android:background="@drawable/bgshape"
            android:hint="Enter your name"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="#8e8e8e"
            android:textColorHint="#3A3A3A"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/emailEdt"
            android:layout_width="362dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:imeOptions="actionNext"
            android:background="@drawable/bgshape"
            android:hint="Enter your email"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="#8e8e8e"
            android:textColorHint="#3A3A3A"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/phoneEdt"
            android:layout_width="362dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:background="@drawable/bgshape"
            android:hint="Enter your phone"
            android:inputType="number"
            android:ems="10"
            android:paddingStart="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="#8e8e8e"
            android:textColorHint="#3A3A3A"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/passwordEdt"
            android:layout_width="362dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:imeOptions="actionNext"
            android:background="@drawable/bgshape"
            android:hint="Enter your password"
            android:inputType="number"
            android:ems="10"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="#8e8e8e"
            android:textColorHint="#3A3A3A"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/addressEdt"
            android:layout_width="362dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:imeOptions="actionDone"
            android:background="@drawable/bgshape"
            android:hint="Address"
            android:inputType="text"
            android:ems="10"
            android:paddingStart="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="#8e8e8e"
            android:textColorHint="#3A3A3A"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/red"
            android:background="@drawable/bgshape"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="By Sign Up, you agree "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:textColor="@color/blue"
                android:textSize="15sp"
                />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>